<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".fracment_responder_notificacion">

    <TextView
        android:id="@+id/id_responder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/cambaSi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Si acepto"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cambaNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_responder"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/cambaNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No acepto"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_responder"
        app:layout_constraintVertical_bias="0.4" />
</android.support.constraint.ConstraintLayout>